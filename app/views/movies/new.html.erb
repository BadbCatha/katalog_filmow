<h1> New movie </h1>

<%= form_for :movie, url: movies_path do |f| %>
<p>
<h2>
<%= f.label :title %><br>
<%= f.text_field :title %>
</h2>
</p>
<p>
<%= f.label :premiere_date %><br>
<%= f.text_field :premiere_date %>
</p>
<p>
<%= f.label :length %><br>
<%= f.text_field :length %>
</p>
<p>
<%= f.label :genres %><br>
<%= f.text_field :genres %>
</p>
<p>
<%= f.label :director %><br>
<%= f.text_field :director %>
</p>
<p>
<%= f.label :screenwriter %><br>
<%= f.text_field :screenwriter %>
</p>
<p>
<%= f.label :country %><br>
<%= f.text_field :country %>
</p>
<p>
<%= f.label :text %><br>
<%= f.text_area :text %>
</p>
<p>
<%= f.submit %>
</p>
<% end %>
<p>
<%= link_to 'Back', movies_path %>
</p>
